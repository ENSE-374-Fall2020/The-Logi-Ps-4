<body>

    <%- include("partials/navbar", {username: username, completedWorkouts: [undefined]}); -%>


    <h1 class="title"> Exercises </h1>

    <!-- Container for whole page -->
    <div class="container-fluid">
        <div class="row">
            <!-- Left-side list of all exercises -->
            <section id="exerciseSideList" class="accordion col-sm-3 bg-light">
                <% 
                    // for each bodypart
                    //  if you haven't seen it before:
                    //      create a new header
                    //      add to list of "seen" bodyparts
                    // for each exercise
                    //  if the exercises bodyPart list includes the current header
                    //      add the exercise.name to the list with href to card

                    // list that contains an array of bodyparts
                    //      each bodypart has an array of exercise names
                    //      that include that bodypart

                    /*
                class bodyPart {
                    constructor(exercisesForThisPart[]) {
                        this.exercises = exercisesForThisPart;
                    }
                }
                let bodyPartList = new [bodyPart];
                for (let exercise of allExercisesList) {
                    for (let bodyPart of exercise.bodyParts) {

                    }
                }
                */
               %>
                
                <% let bodyPartList = [String]; // to track which parts have lists created for them
                for (let exercise of allExercisesList) { %>
                <article class="card">
                    <% for (let newBodyPart of exercise.bodyParts) {
                        console.log("checking part: " + newBodyPart);
                        // if new body part hasn't been seen before
                        if (!bodyPartList.includes(newBodyPart)) {
                            console.log("\tNot found; added to list\n");
                            // add to list of "seen" body parts and create new header
                            bodyPartList.push(newBodyPart); 
                            %>
                    <div id="sideList<%=newBodyPart%>Header" class="card-header">
                        <h5>
                            <button class="btn btn-link" type="button" data-toggle="collapse"
                                data-target="#sideList<%=newBodyPart%>Container" aria-expanded="true"
                                aria-controls="sideList<%=newBodyPart%>Container">
                                <%=newBodyPart%>
                            </button>
                        </h5>
                    </div>
                    <div id="sideList<%=newBodyPart%>Container" class="collapse"
                        aria-labelledby="sideList<%=newBodyPart%>Header" data-parent="#exerciseSideList">
                        <div id="sideList<%=newBodyPart%>" class="card-body list-group">
                            <!-- Must dynamically render with separate Javascript functions
                                <a class="list-group-item" href="#squatCard">Squat</a>
                                -->
                        </div>
                    </div>
                    <% 
                            } // ... end if included
                        } // ... end for each bodypart
                    %>


                </article>
                <% } // ... end for each exercise %>
