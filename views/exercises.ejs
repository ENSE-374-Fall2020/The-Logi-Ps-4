                        <div class="card-body list-group">
                            <a class="list-group-item" href="#pushupCard">Pushup</a>
                            <a class="list-group-item " href="#list-item-12">Pullup</a>
                            <a class="list-group-item" href="#list-item-13">Weight Curl</a>
                        </div>
                    </div>
                </article>
                END STATIC EXAMPLES -->
            </section>

            <!-- Alternative, uncategorized list of exercises

                    <section id="exerciseSideList" class="col-sm-3 bg-light list-group">
                <a class="list-group-item" href="#squatCard">Squat</a>
                <a class="list-group-item " href="#list-item-12">Leg Curl</a>
                <a class="list-group-item" href="#list-item-13">Wall Chair</a>
                <a class="list-group-item" href="#pushupCard">Pushup</a>
                <a class="list-group-item " href="#list-item-12">Pullup</a>
                <a class="list-group-item" href="#list-item-13">Weight Curl</a>
            </section>
            -->

            <!-- End of side list section -->

            <!-- Container for all exercise cards -->
            <section id="exerciseCardList" class="col-md-9 d-flex flex-wrap">
                <% for (let exercise of allExercisesList) {
                // include ("partials/exerciseCard.ejs", {exercise: exercise});
                %>
                <article id="<%=exercise.name%>Card" class="card setCard m-3">
                    <h4 class="card-title bg-primary text-light text-center p-2 m-2"><%=exercise.name%></h4>
                    <img class="card-img-top p-2" src="<%=exercise.imagePath%>" alt="Card image cap" />
                    <div class="card-body bg-light">
                        <h5>Muscles Used:</h5>
                        <ul>
                            <% for (let muscle of exercise.muscles) { %>
                            <li><%=muscle%></li>
                            <% } %>

                        </ul>
                        <a href="<%=exercise.tutorialURL%>">
                            <button class="btn btn-outline-info">
                                Demonstration
                            </button>
                        </a>
                    </div>
                </article>
                <% } %>

